{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "exclude": ["node_modules/", "dist/", "build/", "*/.*/"],
  "compilerOptions": {
    "target": "ESNext", // 对齐Node.js 22的V8引擎版本
    "module": "NodeNext", // 强制使用Node.js原生ESM模块系统
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  }
}
