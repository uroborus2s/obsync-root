{
  "name": "@obsync/root",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build --filter",
    "build:all": "turbo run build --filter=./packages/*",
    "dev": "turbo run dev --filter=\"$npm_config_pkg\"",
    "lint": "turbo run lint",
    "lint:pkg": "turbo run lint --filter=\"$npm_config_pkg\"",
    "clean": "turbo run clean",
    "test": "turbo run test",
    "release": "pnpm run build:all && pnpm changeset publish",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "packageManager": "pnpm@10.0.0",
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
    "@eslint/eslintrc": "^3.3.0",
    "@microsoft/api-documenter": "^7.26.24",
    "@microsoft/api-extractor": "^7.52.5",
    "@tsconfig/recommended": "^1.0.8",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.16.5",
    "@types/pg": "^8.15.2",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/uuid": "^10.0.0",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vitest/coverage-v8": "^4.0.5",
    "esbuild": "^0.25.11",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.3",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "node-ssh": "^13.2.1",
    "prettier": "^3.5.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.6",
    "turbo": "^2.5.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.5"
  },
  "engines": {
    "node": ">=22",
    "typescript": "^5.0.0",
    "pnpm": ">=10.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3"
    ]
  }
}
