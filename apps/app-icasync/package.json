{
  "name": "@wps/app-icasync",
  "version": "0.0.1",
  "private": true,
  "description": "基于Stratix框架的课表同步应用 - ICA-Sync",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "pnpm run clean && tsc",
    "start": "node dist/index.js",
    "dev": "tsx --watch src/index.ts",
    "env": "stratix config encrypt prod.env.json",
    "env:dev": "stratix encrypt dev.env.json",
    "stratix": "stratix",
    "lint": "eslint --ext .ts src",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "verify-plugins": "tsx scripts/verify-plugins.ts",
    "test-startup": "tsx scripts/test-startup.ts",
    "test-endpoints": "curl -s http://localhost:3000/api/icasync/health && curl -s http://localhost:3000/api/tasks/health"
  },
  "dependencies": {
    "@stratix/core": "workspace:*",
    "@stratix/utils": "workspace:*",
    "@stratix/database": "workspace:*",
    "@stratix/was-v7": "workspace:*",
    "@stratix/tasks": "workspace:*",
    "@stratix/icasync": "workspace:*",
    "mysql2": "^3.14.1",
    "jsonwebtoken": "^9.0.2",
    "@fastify/jwt": "^9.0.1",
    "@fastify/redis": "^7.0.1",
    "@fastify/http-proxy": "^10.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@vitest/coverage-v8": "^3.1.3",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "tsx": "^4.19.4",
    "typescript": "5.8.3",
    "vitest": "^3.1.2",
    "@types/jsonwebtoken": "^9.0.9"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
