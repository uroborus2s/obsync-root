{
  "name": "@wps/app-icasync",
  "version": "1.0.0",
  "private": true,
  "description": "基于Stratix框架的课表同步应用 - ICA-Sync",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "pnpm run clean && tsc",
    "start": "node dist/index.js",
    "dev": "tsx --watch src/index.ts",
    "env": "stratix config encrypt prod.env.json",
    "env:dev": "stratix config encrypt dev.env.json",
    "stratix": "stratix",
    "lint": "eslint --ext .ts src",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "vitest",
    "test:run": "vitest run"
  },
  "dependencies": {
    "@stratix/core": "1.0.0-beta.7",
    "@stratix/utils": "1.0.0-beta.1",
    "@stratix/database": "1.0.0-beta.3",
    "@stratix/was-v7": "1.0.0-beta.1",
    "@stratix/tasks": "1.0.0-beta.3",
    "@stratix/icasync": "workspace:*",
    "mysql2": "^3.14.1",
    "@fastify/under-pressure": "^9.0.3"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.8",
    "@types/node": "^22.16.5",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@vitest/coverage-v8": "^3.1.3",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "tsx": "^4.19.4",
    "typescript": "5.8.3",
    "vitest": "^3.1.2",
    "@types/jsonwebtoken": "^9.0.9",
    "rimraf": "^6.0.1"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
