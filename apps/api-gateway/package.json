{
  "name": "@stratix/gateway",
  "version": "0.0.1",
  "private": true,
  "description": "",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "pnpm run clean && tsc",
    "start": "node dist/index.js",
    "dev": "tsx --watch src/index.ts",
    "env": "stratix config encrypt prod.env.json",
    "env:dev": "stratix encrypt dev.env.json",
    "stratix": "stratix",
    "lint": "eslint --ext .ts src",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@stratix/core": "1.0.0-beta.3",
    "@stratix/utils": "^1.0.0",
    "@stratix/database": "^1.0.0",
    "@fastify/http-proxy": "^11.3.0",
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.1",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/cookie": "^11.0.2",
    "@fastify/compress": "^8.1.0",
    "@fastify/under-pressure": "^9.0.3",
    "@fastify/redis": "^7.0.1",
    "@fastify/circuit-breaker": "^4.0.2",
    "@fastify/caching": "^9.0.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "nanoid": "^5.0.4",
    "prom-client": "^15.1.3",
    "ioredis": "^5.7.0"
  },
  "devDependencies": {
    "@types/node": "^22.16.5",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@vitest/coverage-v8": "^3.1.3",
    "eslint": "^8.54.0",
    "@tsconfig/recommended": "^1.0.8",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^3.1.2",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/bcryptjs": "^2.4.6"
  },
  "engines": {
    "node": ">=22"
  }
}
