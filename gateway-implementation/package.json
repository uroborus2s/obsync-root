{
  "name": "@stratix/gateway",
  "version": "1.0.0",
  "description": "基于Stratix框架的API网关服务",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "stratix-gateway": "dist/bin/gateway.js"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "gateway",
    "api-gateway",
    "stratix",
    "fastify",
    "microservices",
    "proxy",
    "authentication",
    "rate-limiting"
  ],
  "author": "Stratix Team",
  "license": "MIT",
  "dependencies": {
    "@stratix/core": "workspace:*",
    "@stratix/database": "workspace:*",
    "fastify": "^5.4.0",
    "jsonwebtoken": "^9.0.2",
    "http-proxy-middleware": "^3.0.0",
    "ioredis": "^5.4.1",
    "ajv": "^8.17.0",
    "ajv-formats": "^3.0.1",
    "pino": "^9.6.0",
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vitest": "^2.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.3.0"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}