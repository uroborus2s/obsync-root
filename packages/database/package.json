{
  "name": "@stratix/database",
  "version": "0.1.0",
  "description": "A powerful ORM library supporting multiple databases and caching solutions",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rimraf dist",
    "build": "pnpm run clean && tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "lint": "eslint src --ext .ts"
  },
  "dependencies": {
    "glob": "^10.3.10",
    "knex": "^3.0.1",
    "yargs": "^17.7.2",
    "@stratix/utils": "workspace:*"
  },
  "peerDependencies": {
    "mysql2": "^3.12.0",
    "pg": "^8.13.3",
    "sqlite3": "^5.1.7",
    "oracledb": "^6.8.0",
    "mssql": "^11.0.1"
  },
  "peerDependenciesMeta": {
    "mysql2": {
      "optional": true
    },
    "pg": {
      "optional": true
    },
    "sqlite3": {
      "optional": true
    },
    "oracledb": {
      "optional": true
    },
    "mssql": {
      "optional": true
    },
    "redis": {
      "optional": true
    }
  },
  "keywords": [
    "orm",
    "database",
    "typescript",
    "redis",
    "cache"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/types/index.d.ts"
    }
  },
  "author": "Obsync Team",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  }
}
