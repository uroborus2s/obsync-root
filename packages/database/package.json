{
  "name": "@stratix/database",
  "version": "1.0.0-beta.11",
  "description": "Stratix Database Plugin with two-layer architecture, Kysely integration and advanced features",
  "main": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "type": "module",
  "scripts": {
    "clean": "rimraf dist",
    "build": "rimraf dist && tsc",
    "build:watch": "tsc --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:integration": "vitest run tests/integration.test.ts",
    "test:unit": "vitest run tests/*.test.ts --exclude tests/integration.test.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": [
    "stratix",
    "database",
    "kysely",
    "orm",
    "postgresql",
    "mysql",
    "sqlite",
    "typescript",
    "plugin"
  ],
  "author": "Stratix Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/stratix/stratix-database.git"
  },
  "bugs": {
    "url": "https://github.com/stratix/stratix-database/issues"
  },
  "homepage": "https://github.com/stratix/stratix-database#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "kysely": "^0.28.3",
    "reflect-metadata": "^0.2.2",
    "@stratix/utils": "workspace:*"
  },
  "peerDependencies": {
    "@stratix/core": "workspace:*",
    "pg": "^8.16.3",
    "mysql2": "^3.14.2",
    "better-sqlite3": "^12.2.0",
    "tarn": "^3.0.2",
    "tedious": "^18.6.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/pg": "^8.15.4",
    "pg": "^8.16.3",
    "mysql2": "^3.14.2",
    "better-sqlite3": "^12.2.0",
    "tarn": "^3.0.2",
    "tedious": "^18.6.1"
  },
  "engines": {
    "node": ">=22.0.0"
  }
