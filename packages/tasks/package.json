{
  "name": "@stratix/tasks",
  "version": "1.0.0",
  "description": "Advanced task management system with tree structure and execution engine for Stratix framework",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist",
    "docs",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "rimraf dist && tsc",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ci": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "typecheck": "tsc --noEmit",
    "docs:build": "typedoc src/index.ts --out docs/api",
    "prepublishOnly": "pnpm run clean && pnpm run build"
  },
  "keywords": [
    "stratix",
    "tasks",
    "workflow",
    "execution-engine",
    "task-tree",
    "job-queue",
    "scheduler",
    "typescript"
  ],
  "dependencies": {
    "@stratix/utils": "workspace:*",
    "cron-parser": "^4.9.0",
    "ajv": "^8.17.1",
    "jsonpath-plus": "^10.3.0",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/jsonpath-plus": "^5.0.5"
  },
  "peerDependencies": {
    "@stratix/core": "workspace:*",
    "@stratix/database": "workspace:*"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/stratix/stratix.git",
    "directory": "packages/tasks"
  },
  "bugs": {
    "url": "https://github.com/stratix/stratix/issues"
  },
  "homepage": "https://github.com/stratix/stratix/tree/main/packages/tasks#readme",
  "publishConfig": {
    "access": "public"
  }
}
