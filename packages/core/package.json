    "awilix": "^12.0.5",
    "awilix-manager": "^6.1.0",
    "dotenv": "^16.4.7",
    "dotenv-expand": "^12.0.2",
    "fastify": "^5.3.2",
    "fastify-plugin": "^5.0.1",
    "js-yaml": "^4.1.0",
    "minimist": "^1.2.8",
    "pino": "^9.6.0",
    "pino-roll": "^1.0.0"
  },
