{
  "name": "@stratix/redis",
  "version": "1.0.0-beta.2",
  "description": "Stratix Redis Plugin with adapter pattern, dependency injection and cross-plugin sharing",
  "main": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "type": "module",
  "scripts": {
    "clean": "rimraf dist",
    "build": "rimraf dist && tsc",
    "build:watch": "tsc --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:integration": "vitest run tests/integration.test.ts",
    "test:unit": "vitest run tests/*.test.ts --exclude tests/integration.test.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": [
    "stratix",
    "redis",
    "cache",
    "adapter",
    "dependency-injection",
    "ioredis",
    "cluster",
    "typescript",
    "plugin"
  ],
  "author": "Stratix Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/stratix/stratix-redis.git"
  },
  "bugs": {
    "url": "https://github.com/stratix/stratix-redis/issues"
  },
  "homepage": "https://github.com/stratix/stratix-redis#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "ioredis": "^5.7.0",
    "@stratix/utils": "workspace:*"
  },
  "peerDependencies": {
    "@stratix/core": "workspace:*"
  },
  "devDependencies": {},
  "engines": {
    "node": ">=22.0.0"
  }
}
