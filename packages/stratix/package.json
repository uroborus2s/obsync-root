{
  "name": "stratix",
  "version": "0.1.0",
  "description": "一个轻量级的Node.js应用框架，基于Fastify构建",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint --ext .ts src",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build",
    "example:basic": "ts-node-esm examples/basic-app/index.ts",
    "example:config": "ts-node-esm examples/config-app/index.ts",
    "example:plugin": "ts-node-esm examples/custom-plugin/index.ts"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "framework",
    "fastify",
    "node",
    "plugin",
    "server",
    "web"
  ],
  "author": "Stratix Team",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.12.0",
    "dotenv": "^16.3.1",
    "fastify": "^4.24.3",
    "js-yaml": "^4.1.0",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3",
    "@stratix/utils": "workspace:*"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2",
    "vitest": "^0.34.6"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
